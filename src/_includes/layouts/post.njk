{% extends 'layouts/page.njk' %}

{% block content %}
  <main id="main-content" tabindex="-1" class="page" >
    <div class="page__header-wrapper">
      <div class="post">
        <h1>{{title}}</h1>
      </div>
    </div>

    <div class="wrapper">
      <div class="inner-wrapper">
        <header>
          <h1>{{title}}</h1>

          <p class="meta-info">
            {% if date %}
              <time datetime="{{ date | postDate }}" class="dt-published">{{ date | postDate }}</time>
            {% endif %}
            <span>â€” {{ helpers.getReadingTime(content) }} minute read</span>
          </p>
        </header>

        <article>
          <div class="page__content">
            {{ content | safe }}
          </div>

          {% if tags %}
            <footer class="post__footer">
              <h2 class="">Filed under:</h2>
              <ul class="nav__list">
                {% for item in tags %}
                  <li class="nav__item">
                    <a href="/tags/{{ item }}">{{ item }}</a>
                  </li>
                {% endfor %}
              </ul>
            </footer>
          {% endif %}
        </article>
      </div>
    </div>
  </main>
{% endblock %}

